<!--                    android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginStart="8dp" />

            </LinearLayout>
        </LinearLayout>

